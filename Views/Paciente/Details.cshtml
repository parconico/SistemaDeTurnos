@model Turnos.Models.Paciente

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>

<body>
    <div>
        <h5>Paciente</h5>
        <hr>
        <div class="row">
            <div class="col s12 m6">
                <div class="card hoverable green darken-1">
                    <div class="card-content white-text">
                        <span class="card-title">
                            <h5><b>@Html.DisplayFor(model => model.Nombre), @Html.DisplayFor(model =>
                                    model.Apellido)</b></h5>
                        </span>
                        <dl>
                            <dt>
                                <h6>@Html.DisplayNameFor(model => model.Direccion): @Html.DisplayFor(model =>
                                    model.Direccion)</h6>
                            </dt>
                            <hr>
                            <dt>
                                <h6>@Html.DisplayNameFor(model => model.Telefono): @Html.DisplayFor(model =>
                                    model.Telefono)</h6>
                            </dt>
                            <hr>
                            <dt>
                                <h6>@Html.DisplayNameFor(model => model.Email): @Html.DisplayFor(model => model.Email)
                                </h6>
                            </dt>
                        </dl>
                    </div>
                    <div class="card-action blue-grey darken-2">
                        <form asp-action="Edit">
                            <input type="hidden" asp-for="IdPaciente" />
                            <a asp-action="Edit" asp-route-id="@Model.IdPaciente">Editar</a>
                            <a asp-action="Index" class="right">Volver</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>