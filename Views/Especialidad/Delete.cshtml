@model Turnos.Models.Especialidad

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Eliminar</title>
</head>

<body>

    <h4>Esta usted seguro de eliminar el siguiente registro?</h4>
    <div>
        <h5>Especialidad</h5>
        <hr>
        <div class="row">
            <div class="col s12 m6">
                <div class="card hoverable orange darken-1">
                    <div class="card-content white-text">
                        <span class="card-title">
                            <h5><b>@Html.DisplayFor(model => model.Descripcion)
                        </span>
                    </div>
                    <div class="card-action blue-grey darken-2">
                            <form asp-action="Delete">
                                <input type="hidden" asp-for="IdEspecialidad" />
                                <input type="submit" value="ELIMINAR"
                                    class="waves-effect waves-light btn-small red lighten-2">
                                <a asp-action="Index" class="right">Volver</a>
                            </form>
                        </div>
                </div>
            </div>
        </div>
    </div>

</body>

</html>